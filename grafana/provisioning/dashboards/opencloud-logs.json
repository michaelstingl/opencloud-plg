{
  "uid": "opencloud-logs",
  "title": "OpenCloud Logs",
  "description": "Log monitoring for all OpenCloud services and components with flexible filtering",
  "tags": ["opencloud", "logs", "loki"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 5,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "service",
        "label": "Service",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values(service)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "allValue": ".+",
        "current": { "text": "opencloud", "value": "opencloud" },
        "sort": 1
      },
      {
        "name": "component",
        "label": "Component",
        "type": "custom",
        "query": "proxy,storage-system,storage-users,storage-shares,storage-publiclink,auth-service,auth-app,auth-basic,auth-machine,frontend,gateway,graph,groups,users,idm,idp,nats,notifications,ocdav,ocm,postprocessing,sharing,activitylog,settings,thumbnails,app-provider,app-registry,clientlog,antivirus,search,sse,webfinger,collaboration,userlog,eventhistory,invitations,policies,audit",
        "multi": true,
        "includeAll": true,
        "allValue": ".+",
        "current": { "text": "proxy", "value": "proxy" }
      },
      {
        "name": "level",
        "label": "Log Level",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values(level)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "allValue": ".+",
        "current": { "text": "info", "value": "info" },
        "sort": 1
      },
      {
        "name": "search",
        "label": "Search",
        "type": "textbox",
        "current": { "selected": false, "text": "", "value": "" },
        "options": [{ "selected": true, "text": "", "value": "" }]
      }
    ]
  },
  "panels": [
    {
      "id": 100,
      "title": "Overview",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "id": 1,
      "title": "Log Volume by Level",
      "description": "Log volume over time grouped by log level. Spikes in error/warn indicate issues.",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 16, "x": 0, "y": 1 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80,
            "stacking": { "mode": "normal", "group": "A" },
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "never"
          },
          "unit": "short"
        },
        "overrides": [
          { "matcher": { "id": "byName", "options": "error" }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "warn" }, "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "warning" }, "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "info" }, "properties": [{ "id": "color", "value": { "fixedColor": "blue", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "debug" }, "properties": [{ "id": "color", "value": { "fixedColor": "gray", "mode": "fixed" } }] }
        ]
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum by (level) (count_over_time({service=~\"$service\", level=~\"$level\"} | json | service_extracted=~\"$component\" |~ \"(?i)$search\" [$__auto]))",
          "legendFormat": "{{level}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Error Count",
      "description": "Total errors in selected time range",
      "type": "stat",
      "gridPos": { "h": 3, "w": 4, "x": 16, "y": 1 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 100 }
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["sum"], "fields": "", "values": false }
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum(count_over_time({service=~\"$service\", level=\"error\"} | json | service_extracted=~\"$component\" |~ \"(?i)$search\" [$__range]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Warning Count",
      "description": "Total warnings in selected time range",
      "type": "stat",
      "gridPos": { "h": 3, "w": 4, "x": 20, "y": 1 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "orange", "value": 200 }
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["sum"], "fields": "", "values": false }
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum(count_over_time({service=~\"$service\", level=~\"warn|warning\"} | json | service_extracted=~\"$component\" |~ \"(?i)$search\" [$__range]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Total Logs",
      "description": "Total log lines in selected time range",
      "type": "stat",
      "gridPos": { "h": 3, "w": 4, "x": 16, "y": 4 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "blue", "value": null }]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["sum"], "fields": "", "values": false }
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum(count_over_time({service=~\"$service\", level=~\"$level\"} | json | service_extracted=~\"$component\" |~ \"(?i)$search\" [$__range]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Error Rate",
      "description": "Percentage of error logs",
      "type": "gauge",
      "gridPos": { "h": 3, "w": 4, "x": 20, "y": 4 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          },
          "unit": "percent"
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum(count_over_time({service=~\"$service\", level=\"error\"} | json | service_extracted=~\"$component\" [$__range])) / sum(count_over_time({service=~\"$service\"} | json | service_extracted=~\"$component\" [$__range])) * 100",
          "refId": "A"
        }
      ]
    },
    {
      "id": 200,
      "title": "Distribution",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 7 },
      "collapsed": false
    },
    {
      "id": 6,
      "title": "Logs by Service",
      "description": "Log distribution by Docker Compose service",
      "type": "piechart",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "right", "showLegend": true },
        "pieType": "pie",
        "reduceOptions": { "calcs": ["sum"], "fields": "", "values": false }
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum by (service) (count_over_time({service=~\"$service\", level=~\"$level\"} | json | service_extracted=~\"$component\" |~ \"(?i)$search\" [$__range]))",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 7,
      "title": "Logs by Component",
      "description": "Log distribution by OpenCloud internal component",
      "type": "piechart",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "right", "showLegend": true },
        "pieType": "pie",
        "reduceOptions": { "calcs": ["sum"], "fields": "", "values": false }
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum by (service_extracted) (count_over_time({service=~\"$service\", level=~\"$level\"} | json | service_extracted=~\"$component\" |~ \"(?i)$search\" [$__range]))",
          "legendFormat": "{{service_extracted}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 8,
      "title": "Top Components by Errors",
      "description": "Components with most errors - sorted by error count",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1000 },
              { "color": "orange", "value": 10000 },
              { "color": "red", "value": 50000 }
            ]
          },
          "unit": "short",
          "mappings": []
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "showPercentChange": false,
        "textMode": "value_and_name",
        "wideLayout": true
      },
      "transformations": [
        {
          "id": "renameByRegex",
          "options": {
            "regex": ".*service_extracted=\"([^\"]+)\".*",
            "renamePattern": "$1"
          }
        }
      ],
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "topk(5, sum by (service_extracted) (count_over_time({service=~\"$service\", level=\"error\"} | json | service_extracted=~\"$component\" [$__range])))",
          "legendFormat": "",
          "refId": "A",
          "instant": true
        }
      ]
    },
    {
      "id": 9,
      "title": "Log Volume by Component",
      "description": "Log volume over time grouped by OpenCloud component",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "stacking": { "mode": "normal", "group": "A" },
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "never"
          },
          "unit": "short"
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum by (service_extracted) (count_over_time({service=~\"$service\", level=~\"$level\"} | json | service_extracted=~\"$component\" |~ \"(?i)$search\" [$__auto]))",
          "legendFormat": "{{service_extracted}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 300,
      "title": "Detailed Logs",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "collapsed": false
    },
    {
      "id": 10,
      "title": "Logs",
      "description": "Live log stream. Use filters above to narrow results.",
      "type": "logs",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 15 },
      "datasource": { "type": "loki", "uid": "loki" },
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": true,
        "showCommonLabels": false,
        "showLabels": true,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "{service=~\"$service\", level=~\"$level\"} | json | service_extracted=~\"$component\" |~ \"(?i)$search\"",
          "refId": "A"
        }
      ]
    }
  ]
}
